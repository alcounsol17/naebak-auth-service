ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=naebak_auth
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=naebak-jwt-secret-key-2024-very-secure
